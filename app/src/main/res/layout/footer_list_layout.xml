<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rvFullLayout"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_100sdp"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginEnd="@dimen/_10sdp"
     >

    <com.mindiii.lasross.helper.RoundRectCornerImageView
        android:id="@+id/ivBgImage"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="match_parent"
        android:alpha=".9"
        android:scaleType="fitXY"
        android:src="@drawable/dress2"
        android:tint="#6F000000"
        />
    <com.mindiii.lasross.helper.RoundRectCornerImageView
         android:layout_width="@dimen/_160sdp"
        android:layout_height="match_parent"
        android:alpha=".9"
        android:scaleType="fitXY"

         android:background="@drawable/deal_background"/>

    <LinearLayout
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
         android:orientation="vertical"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/_10sdp"
       >

        <TextView
            android:id="@+id/tvdealTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibmplexsans_semibold"
            android:text="@string/holiday_style"
            android:maxLines="1"
             android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/tvDealPrice"
             android:ellipsize="end"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibmplexsans_medium"
            android:text="@string/from_50"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/btnShopNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:background="#3bb54a"
            android:gravity="center"
            android:layout_marginTop="@dimen/_7sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingBottom="@dimen/_5sdp"
             android:fontFamily="@font/ibmplexsans_medium"
            android:text="@string/shop_now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>


</RelativeLayout>