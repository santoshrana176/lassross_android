<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rvFullLayout"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_100sdp"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginEnd="@dimen/_10sdp">

    <com.mindiii.lasross.helper.RoundRectCornerImageView
        android:id="@+id/ivBgImage"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="match_parent"
        android:alpha=".9"
        android:scaleType="fitXY"
        android:src="@drawable/dress2"
        android:tint="#6F000000"
      />
    <com.mindiii.lasross.helper.RoundRectCornerImageView
         android:layout_width="@dimen/_150sdp"
        android:layout_height="match_parent"
        android:alpha=".9"
        android:scaleType="fitXY"
         android:tint="#6F000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/tvdealTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibmplexsans_semibold"
            android:text="@string/holiday_style"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tvDealPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibmplexsans_medium"
            android:text="@string/from_50"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp" />

        <Button
            android:id="@+id/btnShopNow"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="13dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#3bb54a"
            android:fontFamily="@font/ibmplexsans_semibold"
            android:text="@string/shop_now"
            android:textColor="@color/white"
            android:textSize="@dimen/_5sdp" />
    </LinearLayout>


</RelativeLayout>