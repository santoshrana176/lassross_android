<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg_color"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llYpper"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/login_bg_img">

        <ImageView
            android:id="@+id/ivCustomerHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="20dp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/left_arrow_icon" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/_77sdp"
            android:layout_marginTop="25dp"
            android:src="@drawable/login_screen_logo" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llYpper"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="-100dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="-30dp"
        android:background="@drawable/layout_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llMiddle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/ibmplexsans_medium"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="@string/customer_help"
                android:textColor="@color/black"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/ibmplexsans_light"
                android:gravity="center"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp"
                android:text="@string/feel_free_to_fill_the_form_below_to_find_your_queries_solution_or_if_you_need_any_help"
                android:textColor="@color/input_text_color"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/ibmplexsans_regular"
                android:text="@string/title"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/ibmplexsans_light"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:lines="1"
                android:maxLines="1"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/input_text_color"
                android:textSize="@dimen/_10sdp"
                tools:ignore="LabelFor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/ibmplexsans_regular"
                android:text="@string/subject"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/etReviews"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/ibmplexsans_light"
                android:gravity="top|left"
                android:hint=""
                android:padding="@dimen/_10sdp"
                android:textColor="@color/input_text_color"
                android:textSize="@dimen/_10sdp"
                tools:ignore="LabelFor,RtlHardcoded" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvUpdateAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/tv_signin_bg"
        android:fontFamily="@font/ibmplexsans_semibold"
        android:gravity="center"
        android:padding="@dimen/_7sdp"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />

</RelativeLayout>