<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutSubscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/llUpperLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:background="@drawable/sub_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_subcribeBack"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_back_arrow_ico" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:fontFamily="@font/ibmplexsans_regular"
                        android:gravity="center"
                        android:text="@string/subscription"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-95dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llLeftLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_minus20sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivLeftImage"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@drawable/circular_side_bg"
                        android:src="@drawable/free_icon_black" />

                    <TextView
                        android:id="@+id/tvLeftText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_28sdp"
                        android:fontFamily="@font/ibmplexsans_regular"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="@string/free"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvLeftPlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:fontFamily="@font/ibmplexsans_regular"
                        android:text="@string/plan"
                        android:textColor="@color/black"
                     />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMiddleLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivMiddleImage"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_110sdp"
                        android:background="@drawable/circular_main_bg"
                        android:src="@drawable/silverplan_icon_orange" />

                    <TextView
                        android:id="@+id/tvMiddleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/ibmplexsans_bold"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="@string/silver_plan"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tvMiddlePlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/ibmplexsans_bold"
                        android:text="@string/plan"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRightLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_minus20sdp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivRightImage"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@drawable/circular_side_bg"
                        android:src="@drawable/goldenplan_icon_black" />

                    <TextView
                        android:id="@+id/tvRightText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_28sdp"
                        android:fontFamily="@font/ibmplexsans_regular"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="@string/golden"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvRightPlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="@dimen/_34sdp"
                        android:fontFamily="@font/ibmplexsans_regular"
                        android:text="@string/plan"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSubscriptionDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvplanPriceCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:fontFamily="@font/ibmplexsans_semibold"
                        android:gravity="center"
                        android:text="$ "
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_23sdp" />

                    <TextView
                        android:id="@+id/tvplanPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibmplexsans_semibold"
                        android:gravity="center"
                        android:text="500"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_20sdp" />

                    <TextView
                        android:id="@+id/tvplanDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/ibmplexsans_regular"
                        android:gravity="center"
                        android:text="@string/month"
                        android:textColor="@color/another_black"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvItemDescriptionListSubscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvSubscribe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/llUpperLayout"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_70sdp"            android:background="@drawable/lasros_main_btn"
            android:fontFamily="@font/ibmplexsans_semibold"
            android:gravity="center"
            android:text="@string/subscribe"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/tvSignUpAsFree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/ibmplexsans_semibold"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/continue_free"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone" />

    </RelativeLayout>
</ScrollView>