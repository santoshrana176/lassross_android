<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg_color"
    tools:context=".module.profile.fragment.UpdateProfileFragment">



        <LinearLayout
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/login_bg_img">

            <ImageView
                android:id="@+id/btnBackToProfile"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_back_arrow_ico" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginStart="@dimen/_77sdp"
                android:layout_marginTop="25dp"
                android:src="@drawable/login_screen_logo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/updateView"
            android:layout_below="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="-100dp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/layout_bg"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/ibmplexsans_medium"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/edit_profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp" />

                <RelativeLayout
                    android:id="@+id/rvImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfileImage"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/edit_profile_pic_image_bg"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/edit_pencil"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/ivProfileImage"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginTop="-15dp"
                        android:background="@drawable/edit_image_icon_bg"
                        android:src="@drawable/edit_blak_icon" />

                    <TextView
                        android:layout_width="@dimen/_7sdp"
                        android:layout_height="@dimen/_6sdp"
                        android:layout_below="@+id/ivProfileImage"
                        android:layout_marginStart="@dimen/_9sdp"
                        android:layout_marginTop="-12dp"
                        android:layout_toEndOf="@+id/edit_pencil"
                        android:background="@color/white" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/ibmplexsans_regular"
                    android:text="@string/full_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_bg"
                    android:hint="@string/name"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/input_text_color"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/ibmplexsans_regular"
                    android:text="@string/address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_bg"
                    android:focusable="false"
                    android:imeOptions="actionDone"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/address"
                    android:textColor="#828282"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnCrash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/force_crash"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_100sdp"
                    android:background="@drawable/lasros_main_btn"
                    android:fontFamily="@font/ibmplexsans_semibold"
                    android:gravity="center"
                    android:padding="@dimen/_7sdp"
                    android:text="@string/update"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

        </LinearLayout>



</RelativeLayout>