<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackColor"
    tools:context=".module.profile.fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:background="@drawable/login_bg_img">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="@dimen/_37sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/login_screen_logo"
                    tools:ignore="ContentDescription" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivUserImage"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/user_pic_border"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/ibmplexsans_semibold"
                    android:gravity="center"
                    android:text="@string/abc"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"/>
            </LinearLayout>


            <ImageView
                android:id="@+id/iv_back_Icon"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:src="@drawable/ic_back_arrow_ico"/>

            <ImageView
                android:id="@+id/ivProfileEdit"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_edit_ico"
                tools:ignore="ContentDescription"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMyOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/user_profile_detail_border">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_19sdp"
                android:src="@drawable/ic_order_ico"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv"
                android:orientation="vertical"
                android:layout_toStartOf="@+id/myorder"
                android:padding="@dimen/_10sdp"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsans_regular"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/my_orders"
                    android:textColor="@color/another_black"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/tvDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsans_light"
                    android:text="@string/it_is_a_long_established_fact_that_a_reader"
                    android:textColor="@color/input_text_color"
                    android:textSize="@dimen/_10sdp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/myorder"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/orange_circle"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_right_arrow_ico"
                tools:ignore="ContentDescription"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMyWishList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/user_profile_detail_border">

            <ImageView
                android:id="@+id/wishList"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_19sdp"
                android:src="@drawable/ic_wishlist_ico"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/wishList"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                android:layout_toStartOf="@+id/myWishList"
                android:visibility="visible"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsans_regular"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/my_wishlist"
                    android:textColor="@color/another_black"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsans_light"
                    android:text="@string/it_is_a_long_established_fact_that_a_reader"
                    android:textColor="@color/input_text_color"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/myWishList"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/orange_circle"
                android:padding="@dimen/_5sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_right_arrow_ico"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMyCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/user_profile_detail_border">

            <ImageView
                android:id="@+id/wallet"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_19sdp"
                android:src="@drawable/ic_wallet_ico"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/wallet"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                tools:ignore="RelativeOverlap"
                android:layout_toStartOf="@+id/savedCard">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsans_regular"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/save_card"
                    android:textColor="@color/another_black"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsans_light"
                    android:text="@string/it_is_a_long_established_fact_that_a_reader"
                    android:textColor="@color/input_text_color"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/savedCard"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/orange_circle"
                android:padding="@dimen/_5sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_right_arrow_ico"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMyCarts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/user_profile_detail_border">

            <ImageView
                android:id="@+id/cart"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_19sdp"
                android:src="@drawable/ic_cart_ico"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/cart"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                android:layout_toStartOf="@+id/myCart"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsans_regular"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/my_cart"
                    android:textColor="@color/another_black"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsans_light"
                    android:text="@string/it_is_a_long_established_fact_that_a_reader"
                    android:textColor="@color/input_text_color"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/myCart"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/orange_circle"
                android:padding="@dimen/_5sdp"
                android:layout_centerInParent="true"

                android:src="@drawable/ic_right_arrow_ico"
                tools:ignore="ContentDescription" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlFAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/user_profile_detail_border"
            android:visibility="gone">

            <ImageView
                android:id="@+id/qa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:src="@drawable/ic_question_ico"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_toStartOf="@+id/myAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/qa"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsans_regular"
                    android:text="@string/my_q_a"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsans_light"
                    android:text="@string/it_is_a_long_established_fact_that_a_reader"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/myAddress"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/orange_circle"
                android:src="@drawable/right_white_icon"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMyAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/user_profile_detail_border">

            <ImageView
                android:id="@+id/address"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_19sdp"
                android:src="@drawable/ic_map_pin_ico"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_toStartOf="@+id/ivArrowAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/address"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsans_regular"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/my_address"
                    android:textColor="@color/another_black"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/tvAddressProfile"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv"
                    android:layout_toEndOf="@+id/ivArrowAddress"
                    android:fontFamily="@font/ibmplexsans_light"
                    android:singleLine="true"
                    android:text="@string/it_is_a_long_established_fact_that_a_reader"
                    android:textColor="@color/input_text_color"
                    android:textSize="@dimen/_10sdp"
                    tools:ignore="NotSibling" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivArrowAddress"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/orange_circle"
                android:padding="@dimen/_5sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_right_arrow_ico"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/user_profile_detail_border">

            <ImageView
                android:id="@+id/setting"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_19sdp"
                android:src="@drawable/ic_setting_ico"
                tools:ignore="ContentDescription"/>

            <LinearLayout
                android:layout_toStartOf="@+id/ivArrowSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/setting"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsans_regular"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/settings"
                    android:textColor="@color/another_black"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsans_light"
                    android:text="@string/it_is_a_long_established_fact_that_a_reader"
                    android:textColor="@color/input_text_color"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivArrowSetting"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/orange_circle"
                android:padding="@dimen/_5sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_right_arrow_ico"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>