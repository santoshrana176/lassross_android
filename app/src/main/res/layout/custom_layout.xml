<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/banner_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:background="@drawable/home_banner_image_bg">

    <com.mindiii.lasross.helper.RoundRectCornerImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/dress2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="vertical">

        <com.mindiii.lasross.utils.TextViewOutline
            android:id="@+id/offer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibmplexsans_bold"
            android:gravity="center"
            android:outlineAmbientShadowColor="@color/white"
            android:shadowColor="@color/white"
            android:shadowDx="4"
            android:shadowDy="0"
            android:shadowRadius="4"
             android:textColor="@color/slider_text_color"
            android:textSize="@dimen/_15sdp"
            app:outlineColor="@color/white"
            app:outlineSize="1dp" />

        <com.mindiii.lasross.utils.TextViewOutline
            android:id="@+id/offer_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibmplexsans_regular"
            android:gravity="center"
            android:outlineAmbientShadowColor="@color/black"
            android:shadowColor="@color/white"
            android:shadowDx="4"
            android:shadowDy="0"
            android:shadowRadius="4"
             android:textColor="@android:color/black"
            android:textSize="@dimen/_9sdp"
            app:outlineColor="@color/black"
            app:outlineSize="1dp"

            />
