<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fullLayout"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/edittext_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp">

            <com.mindiii.lasross.utils.RoudedReactLessCorner
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/dress2"
                app:siBorderColor="@android:color/transparent" />

            <ImageView
                android:id="@+id/ivSimilarProductLike"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:background="@drawable/related_product_wishlist"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/favourite_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvItemNameVariety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/ibmplexsans_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/coats_and_jackets"
            android:textColor="#999999"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibmplexsans_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/jackets_shinny_fit"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibmplexsans_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/tvItemSalePricePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/ibmplexsans_regular"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_8sdp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

