<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffb236</item>
        <item name="colorPrimaryDark">#ffb236</item>
        <item name="colorAccent">#ffb236</item>
    </style>
    <style name="CustomTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffb236</item>
        <item name="colorPrimaryDark">#ffb236</item>
        <item name="colorAccent">#ffb236</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>


    <style name="MyRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/radio_button_text</item>
        <item name="buttonTint">@drawable/radio_button_circle</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#828282</item>
        <item name="colorControlActivated">#efce4a</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <style name="RatingBarfeed" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">#828282</item>
        <item name="colorControlActivated">#efce4a</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/switch_btn_orange_color</item>
    </style>

    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small"/>

    <style name="SwitchCompatStyle">
        <item name="thumbTint">@color/black</item>
        <item name="trackTint">@color/switch_btn_orange_color</item>
    </style>

    <style name="FacebookLoginButton">
        <!--<item name="android:background">@drawable/facebook_signin_btn</item>-->
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    // cropper

    <style name="CropImage" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>

    </style>

    <!--Bottom sheet example-->
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="my_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowMinWidthMajor">50%</item>
        <item name="windowMinWidthMinor">50%</item>
    </style>




    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
         <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
     </style>

    <style name="AlertDialog.AppCompat.Light.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>

    </style>
</resources>
